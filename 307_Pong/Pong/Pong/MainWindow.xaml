<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Canvas>
        <Rectangle Canvas.Left="{Binding Slider.Shape.X}" Canvas.Top="{Binding Slider.Shape.Y}" Height="{Binding Slider.Shape.Height}" Width="{Binding Slider.Shape.Width}" 
                 Fill="Green" />
        <Label Content="{Binding Lifes}" ContentStringFormat="{}{0} life" Canvas.Right="0" Canvas.Top="0"/>
    </Canvas>
</Window>
